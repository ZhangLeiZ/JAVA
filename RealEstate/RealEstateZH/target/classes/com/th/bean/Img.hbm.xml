<?xml version="1.0"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">       
<hibernate-mapping>      
    <class name="com.th.bean.Img" table="t_buildings_img">
			<id name="id" column="id" type="string">
				<generator class="uuid.hex"></generator>
			</id>
			<property name="img_path" length="500" type="string"></property>
			<property name="img_des"   length="50" type="string"></property>
			<property name="buildings_id"  length="36" type="string"></property>
			<property name="created_time"  type="string"></property>
		</class>
</hibernate-mapping>