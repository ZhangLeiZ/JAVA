<?xml version="1.0"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">       
<hibernate-mapping>      
    <class name="com.th.bean.Role" table="t_role">
			<id name="role_id" column="role_id" type="string">
				<generator class="uuid.hex"></generator>
			</id>
			<property name="role_name" length="50" type="string"></property>
			<property name="role_des"  length="50" type="string"></property>
			<property name="created_time"  type="string"></property>
			<property name="role_status" length="2" type="string"></property>
		</class>
</hibernate-mapping>