<?xml version="1.0"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">       
<hibernate-mapping>      
    <class name="com.th.bean.Ads" table="t_ads">
			<id name="ads_id" column="ads_id" type="string">
				<generator class="uuid.hex"></generator>
			</id>
			<property name="ads_title" length="50" type="string"></property>
			<property name="ads_content"   type="string"></property>
			<property name="ads_logo"   type="string"></property>
			<property name="ad_url" length="500" type="string"></property>
			<property name="show_status" length="2" type="string"></property>
			<property name="show_order" length="11" type="int"></property>
			<property name="created_time"  type="string"></property>
			<property name="ads_status" length="2" type="string"></property>
		</class>
</hibernate-mapping>